<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.santos-alves</groupId>
  <artifactId>DS1868Driver</artifactId>
  <name>A c++ driver for the Dallas Semiconductor Dual digital potentiometer DS1868</name>
  <version>1.0.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.5.3</version>
        <configuration>
          <descriptor>assembly.xml</descriptor>
        </configuration>
        <executions>
          <execution>
            <id>create-archive</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>